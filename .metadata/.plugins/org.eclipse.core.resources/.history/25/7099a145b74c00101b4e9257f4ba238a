#include "Button.h"

enum {PUSHED = 0, RELEASED};

void Button_Init()
{
    GPIO_Init(GPIOC, 13, INPUT);
}

button_state_t Button_GetState()
{
	static uint32_t prevState = RELEASED;
	uint32_t curState;
	curState = GPIO_ReadPin(GPIOC, 13);

	if ((prevState == RELEASED) && (curState == PUSHED)) { // button released -> pushed
		delay(2); // debounce
		preState = PUSHED;
		return ACT_PUSHED;
	}
	else if ((prevState == PUSHED) && (curState == RELEASED)) { // button pushed -> released
		delay(2); // debounce
		preState = RELEASED;
		return ACT_RELEASED;
	}
	return NO_ACT;
}
