#include "Controller.h"



void Controller_Mode();

inputData_TypeDef controlData = {0};

void Controller_Excute()
{
	Controller_Mode();
}

void Controller_SetInputData(inputData_TypeDef inputData)
{

	controlData.id = inputData.id;
	controlData.data = inputData.data;
//	if (inputData.id == FLOOR_ACT) {
//		controlData.id = FLOOR_ACT;
//		controlData.data = inputData.data;
//	}
//	else if (inputData.id == EMERGENCY_ACT) {
//		controlData.id = EMERGENCY_ACT;
//		controlData.data = inputData.data;
//	}
//	else if (inputData.id == FLOOR_NO_ACT) {
//		controlData.id = FLOOR_NO_ACT;
//		controlData.data = 0;
//	}
}

void Controller_Mode()
{
	if (controlData.id == RUN_ACT) {
		controlData.id = NO_CONTROL;
		modeState = S_STOP_WATCH;
	}
	else if (controlData.id == STOP_ACT) {
		controlData.id = NO_CONTROL;
		modeState = S_STOP_WATCH;
	}
	treadmill_Excute();
	break;
}
